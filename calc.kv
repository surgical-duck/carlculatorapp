    id: display
    size_hint_y: 0.3
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: display.size
            pos: display.pos
    text:""
    color: root.font_color
    font_size: dp(45)
    halign: 'right'
    valign: 'middle'
    text_size: self.width*0.9, self.height


