                root.manager.transition.direction = 'right'
            size_hint_x: None
            size_hint_y: None
            size: (dp(50), dp(50))
            pos: (root.width-self.width, root.height-self.height)
            background_color: (0, 0, 0, 0)
            background_normal: ''
            canvas.before:
                Color:
                    rgba: root.settings.display_background if self.state == 'normal' else root.settings.display_button_on_press
                Rectangle:
                    size: self.size
                    pos: self.pos
            Image:
                source: root.settings.swap_icon
                center: self.parent.center
                size: (self.parent.size[0]*0.7, self.parent.size[1]*0.7)

        Button:
            text: root.rad_deg_default 
            color: root.settings.display_font
            id: rad_deg_label
            font_size: dp(15)
            size_hint_x: None
            size_hint_y: None
            size: (dp(50), dp(50))
            pos: display.pos
            background_color: (0, 0, 0, 0)
            background_normal: ''
            canvas.before:
                Color:
                    rgba: root.settings.display_background if self.state == 'normal' else root.settings.display_button_on_press
                Rectangle:
                    size: self.size
                    pos: self.pos


<MenuButton@Button>:
    size_hint_y: None
    height: dp(80)
    font_size: dp(20)
    color: 1, 1, 1, 1
    background_normal: ''
    background_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1) if self.state == 'normal' else (0.8, 0.8, 0.8, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<Menu>:
